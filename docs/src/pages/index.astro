const codeArrayStyle = `$v = new Validator($_POST);

$v->forFields([
    'username' => ['required', ['lengthBetween', 3, 20]],
    'email'    => ['required', 'email'],
    'password' => ['required', ['lengthMin', 8]]
]);

if ($v->validate()) {
    // Success
}`;

const codeFluentStyle = `$v = new Validator($_POST);

$v->field('username')
    ->required()
    ->lengthBetween(3, 20);

$v->field('email')
    ->required()
    ->email();

$v->field('password')
    ->required()
    ->lengthMin(8);

if ($v->validate()) {
    // Success
}`;

const codeRulesStyle = `$v = new Validator($_POST);

$v->rules([
    'required'      => ['username', 'email', 'password'],
    'email'         => 'email',
    'lengthBetween' => [['username', 3, 20]],
    'lengthMin'     => [['password', 8]]
]);

if ($v->validate()) {
    // Success
}`;

const codeRuleStyle = `$v = new Validator($_POST);

$v->rule('required', ['username', 'email', 'password'])
  ->rule('email', 'email')
  ->rule('lengthBetween', 'username', 3, 20)
  ->rule('lengthMin', 'password', 8);

if ($v->validate()) {
    // Success
}`;
