---
import Landing from '../layouts/Landing.astro';
import { Code } from 'astro:components';

const codeExample = `use Frostybee\\Valicomb\\Validator;

$v = new Validator([
    'email' => 'test@example.com',
    'age'   => '25'
]);

$v->rule('required', ['email', 'age']);
$v->rule('email', 'email');
$v->rule('integer', 'age');

if ($v->validate()) {
    echo "Validation passed!";
} else {
    print_r($v->errors());
}`;
---

